@model List<misechko.com.data.Entities.Brochure>

@{
    Model.Sort((a, b) => a.ListWeight.CompareTo(b.ListWeight));
}

<div class="block-headline">
    <div class="light-ltr">Б</div>  
    <h1>Брошури</h1>
</div>

<div id="press-block">
    @foreach(var brochureItem in Model)
    {
         <div class="brochure-item">
            @*<div class="brochure-date"><span>@brochureItem.PublishDate.Date.ToString("dd/MM/yyyy")</span></div>*@
            <div class="brochure-link"><a target="_blank" href="@brochureItem.BrochureUrl">@brochureItem.Headline</a></div>
        </div>
    }
</div>
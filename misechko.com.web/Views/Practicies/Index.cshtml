@using ClientDependency.Core.Mvc
@model misechko.com.Models.PracticeViewModel

@{
    ViewBag.Title = "Практики | «Місечко та Партнери»";
    Html.RequiresCss("practices/practices.css", "Content", 110);
    var extended = !Model.HasSupportMaterials ? "extended" : null;
    var practice = Model.CurrentPracticeName;
}

<div id="practices-triplet">
    @if(Model.HasSupportMaterials)
    {
        <div id="support-materials"></div>
    }
    <div id="practice-main" class="@extended">
        @Html.Raw(Model.PracticeMarkup)
    </div>
    <div id="practices-submenu">
        <div id="practices-selector">
            <div class="practice-item @(practice == "abon" ? "selected" : "")">
                <a href="@Url.Content("~/practicies/abon")">
                    <div class="practice-icon"><img src="@Url.Content("~/Content/Practices/img/practice-abon.png")"/></div>
                    <div class="practice-submenu-text">Абонентське обслуговування</div>
                </a>
            </div>
            
            <div class="practice-item @(practice == "diligence" ? "selected" : "")">
                <div class="practice-icon"><img src="@Url.Content("~/Content/Practices/img/practice-due-diligence.png")"/></div>
                <div class="practice-submenu-text">Due Diligence</div>
            </div>
            <div class="practice-item @(practice == "bancrupt" ? "selected" : "")">
                <div class="practice-icon"><img src="@Url.Content("~/Content/Practices/img/practices-bankrupcy.png")"/></div>
                <div class="practice-submenu-text">Банкрутство</div>
            </div>
            <div class="practice-item @(practice == "papers" ? "selected" : "")">
                <div class="practice-icon"><img src="@Url.Content("~/Content/Practices/img/practices-special-papers.png")"/></div>
                <div class="practice-submenu-text">Цінні папери</div>
            </div>
            <div class="practice-item @(practice == "taxes" ? "selected" : "")">
                <div class="practice-icon"><img src="@Url.Content("~/Content/Practices/img/practices-taxes.png")"/></div>
                <div class="practice-submenu-text">Податки</div>
            </div>
            <div class="practice-item @(practice == "esate" ? "selected" : "")">
                <div class="practice-icon"><img src="@Url.Content("~/Content/Practices/img/practice-land.png")"/></div>
                <div class="practice-submenu-text">Земля та нерухомість</div>
            </div>
            <div class="practice-item @(practice == "finances" ? "selected" : "")">
                <div class="practice-icon"><img src="@Url.Content("~/Content/Practices/img/practice-financial-right.png")"/></div>
                <div class="practice-submenu-text">Фінансове право</div>
            </div>
        </div>
    </div>
</div>
